<%- include('includes/header') %>

<div class="container py-md-5 container--narrow">
  <div class="card card-body">
    <div class="container">
      <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
          <div class="text-center">
            <img class="batchPictureAvatar" src="/images/profile/profile-<%=announcementData.username%>.jpg" class="rounded" alt="...">
          <h3><a href="/profile/<%=announcementData.username%>"><%=announcementData.teacherName%></a></h3>
          </div>
          <div class="container mb-4">
            <h3><strong>Teacher's Details</strong> </h3>
            <p><strong>Teacher Name : </strong><%= announcementData.teacherName %></p>
            <p><strong>Gender : </strong><%= tuitorData.gender %></p>
            <p><strong>Address : </strong><%= tuitorData.address %></p>
            <h3><strong>Contact By-</strong> </h3>
            <p><strong>Phone Number : </strong><%= tuitorData.phone %></p>
            <p><strong>Email Id : </strong><%= tuitorData.email %></p>
          </div>
          <div class="container mb-4">
            <h3><strong>Announcement Details</strong> </h3>
            <p><strong>Teacher Name : </strong><%= announcementData.teacherName %></p>
            <p><strong>Stream : </strong><%= announcementData.stream %></p>
            <p><strong>Subject : </strong><%= announcementData.subjectName %></p>
            <p><strong>Class : </strong><%= announcementData.class %></p>
            <strong><p>Announcement Views : <%= announcementData.announcementViewed %></p></strong>
            <h5><strong>Teaching Area Choosen</strong></h5>
            <p><strong>District : </strong><%= announcementData.district %></p>
            <p><strong>Police Station : </strong><%= announcementData.policeStation %></p>
            <p><strong>Post Office : </strong><%= announcementData.postOffice %></p>
          </div>
        </div>
        <div class="col-md-1"></div>
      </div>
    </div>
  </div>
</div>

  <%- include('includes/footer') %>