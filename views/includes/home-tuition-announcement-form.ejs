<div id="accordion">
  <div class="card">
    <div class="card-header" id="HomeTuitionAnnouncementForm">
      <h5 class="mb-0">
        <button class="btn btn-link bolderFont" data-toggle="collapse" data-target="#collapseHomeTuitionAnnouncementForm" aria-expanded="true" aria-controls="collapseHomeTuitionAnnouncementForm">Create Announcement for Home-tuition</button>
      </h5>
    </div>

    <div id="collapseHomeTuitionAnnouncementForm" class="collapse" aria-labelledby="HomeTuitionAnnouncementForm" data-parent="#accordion">
      <div class="card-body">
        <form action="/createHomeTuitionAnnouncement" method="POST" id="createAnnouncement-form">
          <div class="form-group">
            <label for="stream" class="text-muted mb-1"><small>Select Stream</small></label>
            <select id="stream" class="form-control" name="stream" form="createAnnouncement-form">
              <option value="science">Science</option>
              <option value="arts">Arts</option>
              <option value="commerce">Commerce</option>
              <option value="all subjects">All subjects</option>
              <option value="others">Others</option>
            </select>
          </div>

          <div class="form-group">
            <label for="subjectName" class="text-muted mb-1"><small>Subject name</small></label>
            <input name="subjectName" id="subjectName" class="form-control" type="text" placeholder="Write your teaching subject name" autocomplete="off" />
          </div>

          <div class="form-group">
            <label for="class" class="text-muted mb-1"><small>Select class</small></label>
            <select id="class" class="form-control" name="class" form="createAnnouncement-form">
              <option value="class-1">Class 1</option>
              <option value="class-2">Class 2</option>
              <option value="class-3">Class 3</option>
              <option value="class-4">Class 4</option>
              <option value="class-5">Class 5</option>
              <option value="class-6">Class 6</option>
              <option value="class-7">Class 7</option>
              <option value="class-8">Class 8</option>
              <option value="class-9">Class 9</option>
              <option value="class-10">Class 10</option>
              <option value="class-11">Class 11</option>
              <option value="class-12">Class 12</option>
              <option value="all">All</option>
            </select>
          </div>

          <h5>Address details(Important)</h5>
          <p><strong>Select the address according to the area you want to teach.</strong></p>
          <div class="form-group">
            <label for="district" class="text-muted mb-1"><small>Select Your District</small></label>
            <select id="district" class="form-control" name="district" form="createAnnouncement-form">
              <option value="darjeeling">Darjeeling</option>
              <option value="jalpaiguri">Jalpaiguri</option>
            </select>
          </div>
          <div class="form-group">
            <label for="policeStation" class="text-muted mb-1"><small>Select Police Station</small></label>
            <select id="policeStation" class="form-control" name="policeStation" form="createAnnouncement-form">
              <option value="siliguri">Siliguri</option>
              <option value="pradhan nagar">Pradhan Nagar</option>
            </select>
          </div>
          <div class="form-group">
            <label for="postOffice" class="text-muted mb-1"><small>Select Post Office</small></label>
            <select id="postOffice" class="form-control" name="postOffice" form="createAnnouncement-form">
              <option value="champasari">Champasari</option>
              <option value="siliguri">Siliguri</option>
            </select>
          </div>
          <button type="submit" class="py-3 mt-4 btn btn-lg btn-success btn-block">Create Announcement</button>
        </form>
      </div>
    </div>
  </div>
</div>
